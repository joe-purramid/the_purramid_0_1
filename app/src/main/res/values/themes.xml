<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ThePurramid" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/balsamiq_sans</item>
    </style>

    <style name="CenteredActivityTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="Theme.Purramid.FloatingWindow" parent="Theme.Material3.Light.NoActionBar">
        <!-- Core floating window properties -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/floating_window_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:backgroundDimEnabled">false</item>

        <!-- Window appearance -->
        <item name="android:windowElevation">8dp</item>
        <!--suppress AndroidDomInspection -->
        <item name="android:windowCornerRadius">16dp</item>

        <!-- Animations -->
        <item name="android:windowAnimationStyle">@style/FloatingWindowAnimation</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/balsamiq_sans</item>
    </style>

    <style name="FloatingWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/settings_explosion_enter</item>
        <item name="android:windowExitAnimation">@anim/settings_explosion_exit</item>
    </style>
</resources>